package abc;

public class A {
	public static void main(String[] args) {
		int a[]= {1,2,3,4,5,6,7,8,9};
		System.out.println(binarySearch(a, 2));
		
	}
	static int binarySearch(int[] a,int data)
	{
		int start=0;
		int end=a.length;
		while(start<end)
		{
			int mid=(start+end)/2;
			if(a[mid]==data)
			{
				return mid+1;
			}
			else if(a[mid]<data)
			{
				start=mid+1;
				end=a.length;
			}
			else if(a[mid]>data)
			{
				start=0;
				end=mid-1;
			}
		}
		/*
		if(a[a.length-1]>data)
		{
			
		}*/
		return -1;
	}

}
