package abc;

public class A {
	public static void main(String[] args) {
		int a[] = { 1, 2, 3, 4, 5, 6, 7, 8, 9 };
		System.out.println("itrative: "+binarySearch(a, 11));
		System.out.println("Recursive: "+recursiveBinSearch(a, 0, a.length, 11));

	}

	static int recursiveBinSearch(int[] a, int start, int end, int data)

	{
		int mid = (start + end) / 2;
		if (a[mid] == data) {
			return mid;
		} else if (a[mid] < data) {
			start = mid + 1;

		} else if (a[mid] > data) {

			end = mid;
		} else {
			return -1;
		}
		return recursiveBinSearch(a, start, end, data);
	}

	static int binarySearch(int[] a, int data) {
		int start = 0;
		int end = a.length;
		while (start < end) {
			int mid = (start + end) / 2;
			if (a[mid] == data) {
				return mid;
			} else if (a[mid] < data) {
				start = mid + 1;

			} else if (a[mid] > data) {

				end = mid;
			}
		}
		/*
		 * if(a[a.length-1]>data) {
		 * 
		 * }
		 */
		return -1;
	}

}
