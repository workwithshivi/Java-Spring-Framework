<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
"http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean name="/hello.htm" class="org.springframework.web.servlet.mvc.UrlFilenameViewController"/>
		<bean name="/all.htm" class="org.springframework.web.servlet.mvc.UrlFilenameViewController"/>
	
	<!-- View Resolver -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/" />  <!-- '/' is used for default location -->
		<property name="suffix" value=".jsp" />
	</bean>


</beans>